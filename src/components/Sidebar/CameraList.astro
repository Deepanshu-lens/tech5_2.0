---
import { Icon } from "astro-icon/components";
import { Button } from "@/components/ui/button";
import GhostIconButton from "../ui/custom/GhostIconButton.astro";
import NodeManagement from "./NodeManagement.svelte";
import {
  Dialog,
  DialogContent,
  DialogDescription,
  DialogFooter,
  DialogHeader,
  DialogTitle,
  DialogTrigger,
} from "@/components/ui/dialog";
---

<div class="flex-grow bg-white border-l overflow-y-auto">
  <section class="border-b w-full p-2">
    <div class="flex justify-between items-center">
      <h2 class="text-base font-semibold">Cameras</h2>
      <GhostIconButton>
        <Icon name="mdi:add-circle-outline" size={22} />
      </GhostIconButton>

      <Dialog>
        <DialogTrigger asChild>
          <Button variant="outline">Edit Profile</Button>
        </DialogTrigger>
        <DialogContent class="sm:max-w-[425px]">
          <DialogHeader>
            <DialogTitle>Edit profile</DialogTitle>
            <DialogDescription>
              Make changes to your profile here. Click save when you're done.
            </DialogDescription>
          </DialogHeader>
          <div class="grid gap-4 py-4">
            <div class="grid grid-cols-4 items-center gap-4">Bye</div>
            <div class="grid grid-cols-4 items-center gap-4">Yo</div>
          </div>
          <DialogFooter>
            <Button type="submit">Save changes</Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>

      <NodeManagement client:only="svelte" />
